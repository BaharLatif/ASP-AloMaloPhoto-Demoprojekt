@using Spg.AloMalo.DomainModel.Model
@model IQueryable<Album>;

<h1>Liste alle Fotoalben</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Beschreibung</th>
            <th>Erstellungsdatum</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (Album item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreationTimeStamp</td>
            <td><a asp-action="Update" asp-controller="Album" asp-route-name="@item.Name">Update</a></td>
            <td><a>Delete</a></td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" asp-controller="Album">Create</a>