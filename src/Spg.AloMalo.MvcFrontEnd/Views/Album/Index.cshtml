@using Spg.AloMalo.DomainModel.Dtos
@model IQueryable<AlbumDto>;

<h1>Liste alle Fotoalben</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Beschreibung</th>
            <th>Erstellungsdatum</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (AlbumDto item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreationTimeStamp</td>
            <td><a>Update</a></td>
            <td><a>Delete</a></td>
        </tr>
    }
    </tbody>
</table>