@model Spg.General.IdentityProvider.Models.LoginDto;

<h3>Willkommen!</h3>

<form method="post">

    <div asp-validation-summary="All"></div>
    
    <div class="card">
        <div class="card-header">
            Login:
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label for="UserName" class="form-label">User Name:</label>
                <input type="text" class="form-control" asp-for="UserName">
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password:</label>
                <input type="password" class="form-control" asp-for="Password">
            </div>
        </div>
    </div>

    <hr />
    
    <div class="card">
        <div class="card-header">
            Options:
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label for="Audience" class="form-label">Role:</label>
                <select asp-items="ViewBag.Roles" asp-for="Role" class="form-control">
                </select>
            </div>
            <div class="mb-3">
                <label for="Issuer" class="form-label">Issuer:</label>
                <input type="text" class="form-control" asp-for="Issuer" placeholder="https://www.alomaloauth.com">
            </div>
            <div class="mb-3">
                <label for="Audience" class="form-label">Audience:</label>
                <input type="text" class="form-control" asp-for="Audience" placeholder="https://www.alomalophoto.com">
            </div>
        </div>
    </div>

    <br />

    <button type="submit" class="btn btn-success">Generate Token...</button>
</form>